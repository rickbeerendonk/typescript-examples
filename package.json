  "husky": {
    "hooks": {
      "pre-commit": "npm run validate"
    }
  },
  "devDependencies": {
    "husky": "4.0.3",
    "prettier": "1.19.1",
    "rimraf": "3.0.0"
  },
  "scripts": {
